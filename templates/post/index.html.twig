{% extends "base.html.twig" %}


{% block body %}

    {% if app.user %}
        <div>
            <a href="/blog/novy-clanek">
                Nový článek
            </a>
        </div>
    {% endif %}

    {% for post in posts %}
        <div>

            <img src="{{post.thumbnail}}" alt="{{post.title}}">

            <h1>
                <a href="/blog/{{post.id}}">
                    {{post.title}}
                </a>
            </h1>

            <p>
                {{post.excerpt}}
            </p>


        </div>
    {% endfor %}

{% endblock %}