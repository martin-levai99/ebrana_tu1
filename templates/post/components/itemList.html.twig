<section class="post-item-list">
    <div class="row">
        {% for post in posts %}
            <div class="col-12 mb-4 {{ size == "small" ? "col-md-6 col-lg-3" : "col-md-6" }}">
                <article>
                    <a href="/blog/{{post.id}}" class="text-dark text-decoration-none">
                        <img class="w-100 {{size}}" src="{{post.thumbnail}}" alt="{{post.title}}" loading="lazy">
                        <h3 class="my-2 {{ size == "small" ? "h5" : "h3" }}">
                            {{post.title}}
                        </h3>
                        
                        {{post.excerpt|raw}}
                    </a>
                </article>
            </div>
        {% endfor %}
    </div>
</section>